<view class="mineActivities">
	<view class="head">
		<view bindtap="navYe" data-id="publish" style="{{type=='publish'?'border-bottom:0.12rem solid #fff;':''}}">我发布的</view>
		<view bindtap="navYe" data-id="join" style="{{type=='join'?'border-bottom:0.12rem solid #fff;':''}}">我报名的</view>
	</view>
	<view class="content">
		<image src="/assets/WdBgBanner@2x.png"></image>
		<view class="bannerCon">
			<view class="left">
				<view class="one">
					<view class="the" bindtap="navList" data-id="matching">
						<image src="/assets/jooksd.png"></image>
						<text>匹配中</text>
						<view class="rightTop" wx:if="{{activitiesNum.matching!=0}}">{{activitiesNum.matching}}</view>
					</view>
					<view class="the" bindtap="navList" data-id="watinggo">
						<image src="/assets/jooksd.png"></image>
						<text>待出发</text>
						<view class="rightTop" wx:if="{{activitiesNum.waiting!=0}}">{{activitiesNum.waiting}}</view>
					</view>
					<view class="the" bindtap="navList" data-id="activitying">
						<image src="/assets/koog.png"></image>
						<text>活动中</text>
						<view class="rightTop" wx:if="{{activitiesNum.activiting!=0}}">{{activitiesNum.activiting}}</view>
					</view>
				</view>

				<view class="line"></view>

				<view class="one">
					<view class="the" bindtap="navList" data-id="confirm">
						<image src="/assets/lookhi.png"></image>
						<text>待填写结果</text>
						<view class="rightTop" wx:if="{{activitiesNum.confirming!=0}}">{{activitiesNum.confirming}}</view>
					</view>
					<view class="the" bindtap="navList" data-id="comment">
						<image src="/assets/akohj.png"></image>
						<text>待评价</text>
						<view class="rightTop" wx:if="{{activitiesNum.assessing!=0}}">{{activitiesNum.assessing}}</view>
					</view>
					<view class="the" bindtap="navList" data-id="finishd">
						<image src="/assets/jookg.png"></image>
						<text>已完成</text>
						<view class="rightTop" wx:if="{{activitiesNum.finished!=0}}">{{activitiesNum.finished}}</view>
					</view>
				</view>
			</view>
			<view class="rightRight">
				<image src="/assets/line_quanbu.png"></image>
			</view>
			<view class="right">
				<view class="Two" bindtap="all">
					<image src="/assets/lppljh.png"></image>
					<text>全部</text>
				</view>
				<view class="Two" style="margin-top:1.2rem;" bindtap="navList" data-id="Complaints">
					<image src="/assets/loogjhf.png"></image>
					<text>投诉中</text>
				</view>
			</view>

		</view>
	</view>

	<scroll-view scroll-y style="height:60%;margin-top:2rem;" bindscrolltolower="lower">
		<view class="listBoss" wx:for="{{listSon}}" wx:key='index'>
			<view class="content">
				<view class="leftLst">
					<image class="image" src="https://app.tiaozhanmeiyitian.com/{{item.imgURL}}"></image>
					<image wx:if="{{item.sportName=='网球'}}" class="imageTwo" src='/assets/icon_dj_wq.png'></image>
					<image wx:if="{{item.sportName=='高尔夫'}}" class="imageTwo" src='/assets/icon_dj_gef.png'></image>
					<image wx:if="{{item.sportName=='篮球'}}" class="imageTwo" src='/assets/icon_dj_lq.png'></image>
					<image wx:if="{{item.sportName=='乒乓球'}}" class="imageTwo" src='/assets/icon_dj_ppq.png'></image>
					<image wx:if="{{item.sportName=='排球'}}" class="imageTwo" src='/assets/icon_dj_pq.png'></image>
					<image wx:if="{{item.sportName=='台球'}}" class="imageTwo" src='/assets/icon_dj_tq.png'></image>
					<image wx:if="{{item.sportName=='羽毛球'}}" class="imageTwo" src='/assets/icon_dj_ymq.png'></image>
					<image wx:if="{{item.sportName=='足球'}}" class="imageTwo" src='/assets/icon_dj_zq.png'></image>
					<text class="GradeTxt">{{item.userLevel}}</text>
				</view>
				<view class="rightLst">
					<view class="lstHead">{{item.nickname}}
						<image src="/assets/sex0@2x.png"></image>
					</view>
					<text class="lstTwo"> <text style="color:#D85D27;font-weight:500;">{{item.SportMode}}模式</text>
					<text style="padding-left:1rem;">{{item.sportName}}</text>
					<text style="padding-left:1rem;">{{item.sportTypeName}}</text></text>
					<text><text>{{item.startDays}}</text>
					<text style="padding-left:0.5rem;">{{item.week}}</text>
					<text style="padding-left:0.5rem;">{{item.startTimes}}-{{item.endTimes}}</text></text>
					<text>{{item.sitesName}}</text>
					<text>场地费:<text style="padding-left:0.5rem;">{{item.PaySiteMoneyType==1?'AA':'输者买单'}}</text>
					<text style="padding-left:1rem;" wx:if="{{item.Tips!==0||item.MoneyPerhour!==0}}">{{item.SportMode=='1'?'打赏费':'陪练费'||item.SportMode=='2'?'打赏费:':'陪练费'}}</text>
					<text style="padding-left:0.5rem;" wx:if="{{item.Tips!==0}}">{{item.Tips}}.0元</text>
					<text style="padding-left:0.5rem;" wx:if="{{item.MoneyPerhour!==0}}">{{item.MoneyPerhour}}.0元</text>
					</text>

					<view class="btnBos">
						<view class="isConfirmResult" wx:if="{{item.Complaint==2}}">投诉中</view>
						<view class="isConfirmResult" wx:if="{{item.isConfirmResult==0}}">待填写比赛结果</view>
						<view class="isConfirmResult" bindtap="cancels" data-uuid="{{item.uuid}}" wx:if="{{item.PublicStatus==1&&item.isSignIn==0}}">取消发布</view>
						<view class="isConfirmResult" bindtap="isQuit" wx:if="{{item.PublicStatus==2&&item.isQuit==1}}">提前退出</view>
            <view class="isConfirmResult" style="background:#E9E9E9" wx:if="{{item.PublicStatus==2&&item.isQuit==2}}">提前退出</view>
						<view class="isConfirmResult" wx:if="{{item.PublicStatus==2&&item.SigninYes==0}}">场馆签到</view>
						<view class="isConfirmResult" style="background:#E9E9E9;" wx:if="{{item.PublicStatus==2&&item.SigninYes==1}}">已签到</view>
						<view class="isConfirmResult" wx:if="{{item.PublicStatus==3&&item.SigninYes==0}}">场馆签到</view>
						<view class="isConfirmResult" style="background:#E9E9E9;" wx:if="{{item.PublicStatus==3&&item.SigninYes==1}}">已签到</view>
						<view class="isConfirmResult" wx:if="{{item.PublicStatus==3&&item.isQuitInGame==1}}">中途退出</view>
            <view class="isConfirmResult" style="background:#E9E9E9;" wx:if="{{item.PublicStatus==3&&item.isQuitInGame==2}}">中途退出</view>
						<view class="isConfirmResult" wx:if="{{item.PublicStatus==4&&item.normal==0}}">填写结果</view>
						<view class="isConfirmResult" style="background:#E9E9E9;" wx:if="{{item.PublicStatus==4&&item.normal!=0}}">填写结果</view>
						<view class="isConfirmResult" wx:if="{{item.PublicStatus==5&&item.Comment==0}}">待评价</view>
						<view class="isConfirmResult" style="background:#E9E9E9;" wx:if="{{item.PublicStatus==5&&item.Comment!=0}}">待评价</view>
					</view>
				</view>
			</view>
			<view class="status">
				<image wx:if="{{item.PublicStatus==2}}" src='/assets/dai.png'></image>
				<image wx:if="{{item.PublicStatus==6}}" src='/assets/pinjia.png'></image>
				<image wx:if="{{item.PublicStatus==3}}" src='/assets/huodong.png'></image>
				<image wx:if="{{item.PublicStatus==1}}" src='/assets/pipei.png'></image>
				<image wx:if="{{item.PublicStatus==7}}" src='/assets/tuichu.png'></image>
				<image wx:if="{{item.PublicStatus==5}}" src='/assets/wancheng.png'></image>
				<image wx:if="{{item.PublicStatus==8}}" src='/assets/jieshu.png'></image>
				<image wx:if="{{item.PublicStatus==9}}" src='/assets/tousua.png'></image>
			</view>

		</view>




	</scroll-view>










</view>