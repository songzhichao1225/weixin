.blackList{
  height: 100%;
}
.list {
  height: 4.25rem;
  border-bottom: 0.06rem solid #E9E9E9;
}

.list:first-child {
  border-top: 0.06rem solid #E9E9E9;

}

.list image {
  width: 2.69rem;
  height: 2.69rem;
  border-radius: 50%;
  margin-top: 0.8rem;
  margin-left: 2.5%;
  float: left;
}

.list text {
  font-size: 1rem;
  line-height: 4.25rem;
  float: left;
  padding-left: 0.75rem;
}

.list .btn {
  width: 3.13rem;
  height: 1.5rem;
  background: rgba(216, 93, 39, 1);
  border-radius: 0.19rem;
  float: right;
  margin-right: 2.5%;
  margin-top: 1.5rem;
  text-align: center;
  line-height: 1.5rem;
  font-size: 0.75rem;
  color: #fff;
}