  margin-top: 1rem;
  display: block;
}

.realName .name {
  height: 2.5rem;
  background: #F3F3F3;
  border-radius: 0.19rem;
  margin-top: 0.87rem;
  padding-left: 0.3rem;
  font-size: 0.9rem;
}

.realName .btnss {
  height: 2.5rem;
  background: #D85D27;
  border-radius: 0.19rem;
  font-size:1rem;
  margin-top: 0.8rem;
