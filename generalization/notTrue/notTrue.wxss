.title {
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
}

.title .img {
  width: 24rpx;
  height: 24rpx;
  display: block;
  float: left;
}

.title .tishi {
  font-size: 12px;
  color: #4a4a4a;
  display: block;
  float: left;
  width: 93%;
  margin-left: 2%;
  margin-top: -4rpx;
}

.navtar {
  display: block;
  margin-left: 5%;
  font-size: 14px;
  color: #4a4a4a;
  margin-top: 44rpx;
}

.textarea {
  width: 90%;
  height: 232rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #e7e7e7;
  border-top: 2rpx solid #e7e7e7;
  margin-top: 28rpx;
}

.textarea textarea {
  width: 100%;
  height: 170rpx;
  display: block;
  font-size: 14px;
  color: #9b9b9b;
  padding: 10rpx 0;
}

.textarea text {
  display: block;
  text-align: right;
  font-size: 12px;
  color: #9b9b9b;
}

.up {
  display: block;
  margin-left: 5%;
  font-size: 14px;
  color: #4a4a4a;
  margin-top: 28rpx;
}

.imgUp {
  width: 152rpx;
  height: 152rpx;
  margin-top: 28rpx;
  margin-left: 5%;
}

.imgUp image {
  width: 100%;
  height: 100%;
  display: block;
}

.btncomfir {
  width: 100%;
  height: 86rpx;
  background: #d85d27;
  position: fixed;
  bottom: 0;
}

.btncomfir view {
  width: 49.5%;
  height: 50rpx;
  margin-top: 18rpx;
  float: left;
  background: #d85d27;
  text-align: center;
  color: #fff;
  line-height: 50rpx;
}

.btncomfir view:first-child {
  border-right: 2rpx solid #fff;
}

.btncomfir view:last-child {
  border-left: 2rpx solid #fff;
  
}
