page {
  height: 100%;
  border-top: 0.06rem solid #E9E9E9;
}

.list {
  padding: 0 2.5%;
  height: 2.75rem;
  font-size: 0.88rem;
  border-bottom: 0.06rem solid #E9E9E9;
  line-height: 2.75rem;
}

.list .left {
  width: 51%;
  float: left;

}

.list .left>text:first-child {
  float: left;
}

.list .left>text:last-child {
  float: right;
  color: #9B9B9B;
  font-size: 0.75rem;
}

image {
  width: 0.43rem;
  height: 0.68rem;
  float: right;
  margin-top: 1.1rem;
  margin-left: 0.3rem;
}

.list .right {
  width: 48%;
  float: right;

}

.list .right>text:first-child {
  float: left;
}

.list .right>text:last-child {
  float: right;
  color: #9B9B9B;
  font-size: 0.75rem;
}

.list>text:last-child {
  float: right;
  color: #9B9B9B;
  font-size: 0.75rem;
}

.textarea {
  width: 75%;
  float: right;
  line-height: 1rem;
  font-size: 0.75rem;
  margin-top: 0.9rem;
}

.border {
  height: 0.62rem;
  background: #F3F3F3;
}

.kop {
  height: auto;
  overflow: hidden;
}

.btncomfire {
  width: 85%;
  height: 2.5rem;
  margin: 1.5rem auto 0;
  color: #fff;
  background: #D85D27;
  border-radius: 1.34rem;
  line-height: 2.5rem;
}