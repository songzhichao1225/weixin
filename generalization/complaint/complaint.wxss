page {
  height: 100%;
}

.complaint {
  height: 100%;
}

.complaint .search {
  width: 90%;
  height: 60rpx;
  margin: 0 auto;
  overflow: hidden;
}

.complaint .search image {
  width: 24rpx;
  height: 24rpx;
  float: left;
  margin-top: 16rpx;
  margin-right: 20rpx;
}

.complaint .search input {
  display: block;
  height: 60rpx;
  float: left;
  color: #9b9b9b;
}

.complaint .list {
  height: 90%;
}

.complaint .list .listSon {
  width: 95%;
  height: 266rpx;
  margin: 20rpx auto 0;
}

.listSon {
  position: relative;
}

.listSon .image {
  width: 184rpx;
  height: 266rpx;
  position: relative;
  float: left;
}

.listSon .image .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  margin-top: 34rpx;
  margin-left: 24rpx;
}

.listSon .image .type {
  width: 84rpx;
  height: 34rpx;
  display: block;
  background: #d85d27;
  border-radius: 0 0 50% 0;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 36rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.listSon .image .way {
  width: 36rpx;
  height: 36rpx;
  margin-left: 40rpx;
  float: left;
}

.listSon .image .level {
  background-image: linear-gradient(90deg, #fca400 0%, #fee073 100%);
  border-radius: 2px;
  font-size: 10px;
  color: #fff;
  display: block;
  width: 46rpx;
  height: 26rpx;
  float: left;
  margin-top: 6rpx;
  margin-left: 10rpx;
  text-align: center;
  line-height: 26rpx;
}

.listSon .content {
  width: 70%;
  height: 266rpx;
  float: right;
}

.listSon .content .name {
  overflow: hidden;
  margin-top: 34rpx;
}

.listSon .content .name text {
  display: block;
  font-size: 14px;
  color: #333;
  float: left;
}

.listSon .content .name image {
  width: 0.94rem;
  height: 0.94rem;
  float: left;
  margin-left: 6rpx;
  margin-top: 4rpx;
}

.content {
  font-size: 28rpx;
  color: #4a4a4a;
}

.content text {
  display: block;
  line-height: 40rpx;
}

.content .moshi {
  overflow: hidden;
}

.content .moshi text {
  float: left;
  margin-left: 20rpx;
}

.status {
  width: 96rpx;
  height: 84rpx;
  position: absolute;
  right: 0;
  top: 0;
  display: block;
}

.status image {
  width: 100%;
  height: 100%;
}
