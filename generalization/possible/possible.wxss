page{
  height: 100%;
}
.possible{
  height: 100%;
}
.participative {
  height: 100%;
  margin: 0 auto;
  overflow: hidden;
  
}

.participative .sonList {
  padding: 0.75rem 2.5%;
  overflow: hidden;
  position: relative;
  border-top: 0.06rem solid #ededed;
}

.participative .sonList .left {
  width: 5rem;
  float: left;
}

.participative .sonList .left>image {
  width: 5rem;
  height: 5rem;
  border-radius: 0.75rem;
}

.leftBottom>image {
  width: 1.1rem;
  height: 1.1rem;
  float: left;
  margin-left: 0.8rem;
}

.leftBottom>view {
  width: 1.6rem;
  height: 1rem;
  background-image: linear-gradient(90deg, #FCA400 0%, #FEE073 100%);
  border-radius: 2px;
  color: #fff;
  font-size: 10px;
  text-align: center;
  float: left;
  margin-left: 0.5rem;
}
.participative .sonList .right{
  float: left;
  margin-left: 1rem;
  line-height: 1.3rem;
  width: 68.5%;
}
.participative .sonList .right .name{
  font-size: 1rem;
  font-weight: bold;
  overflow: hidden;
}
.participative .sonList .right .name>text{
  float: left;
}
.participative .sonList .right .name>image{
  width: 0.94rem;
  height: 0.94rem;
  display: block;
  float: left;
  margin-left: 0.3rem;
  margin-top: 0.2rem;
}
.patterns{
  overflow: hidden;
}
.patterns text{
  font-size: 0.88rem;
  padding-left: 0.5rem;
}
.patterns text:first-child{
  color: #D85D27;
  padding-left: 0;
}
.rightImg{
  width: 2.94rem;
  height: 2.94rem;
  position: absolute;
  right: 0;
  top: 0rem;
}
.rightImg>image{
  width: 100%;
  height: 100%;
}