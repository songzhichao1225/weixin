page {
  height: 100%;
}

.deductibles {
  height: 100%;
}

.scrollList {
  height: 80%;
}

.listSon {
  width: 95%;
  height: 6.44rem;
  background: linear-gradient(93deg, #FDEABC 0%, #F8D792 100%);
  border-radius: 0.38rem;
  margin: 0.75rem auto 0;
  position: relative;
  overflow: hidden;
}
.listSon:first-child{
  margin-top: 0;
}

.listSon .left {
  float: left;
  font-size: 2rem;
  font-weight: bold;
  line-height: 6.44rem;
  margin-left: 1.25rem;
}

.listSon .left>text {
  display: block;
  float: left;
}

.listSon .left>text:first-child {
  font-size: 1rem;
}

.listSon .center {
  float: right;
  padding: 0.94rem 0;
  width: 70%;
}

.listSon .center>text {
  display: block;
  line-height: 1.5rem;
}

.listSon .center>text:first-child {
  font-size: 1rem;
  font-weight: bold;
}

.listSon .center>text:nth-child(2) {
  font-size: 0.75rem;
  color: #D85D27;
}

.listSon .center>text:last-child {
  font-size: 0.75rem;
  color: #9b9b9b;
}

.operation .onclick .hao {
  width: 0.88rem;
  height: 0.88rem;

}

.operation .onclick>text {
  padding: 0 0.5rem;
  font-size: 0.88rem;
  font-weight: bold;
}

.operation .num {
  font-size: 0.75rem;
  text-align: center;
  margin-top: 0.5rem;
}

.operation {
  width: 4.5rem;
  position: absolute;
  right: 0.5rem;
  top: 2rem;
}

.total {
  width: 95%;
  margin: 0.75rem auto 0;
  font-size: 0.75rem;
  overflow: hidden;
}

.total>text:first-child {
  display: block;
  float: left;
}

.total>text:last-child {
  display: block;
  float: right;
  color: #D85D27;
}

.submit {
  width: 90%;
  height: 2.69rem;
  background: #D85D27;
  border-radius: 1.34rem;
  color: #fff;
  margin-top: 0.75rem;
}
.title{
  width: 95%;
  margin: 0 auto;
  border-top: 0.06rem solid #e9e9e9;
  line-height: 2rem;
  font-size: 0.88rem;
  color: #D85D27;
}