page{
  height: 100%;
}
.dynamicDetails{
  padding-bottom: 5rem;
}

.swiper-item{
  width: 100%;
}
.content{
  width: 90%;
  margin:  1rem auto;
}
.content .headUser{
  overflow: hidden;
}
.content .headUser .avatar{
  width: 2.38rem;
  height: 2.38rem;
  float: left;
}
.content .headUser .avatar>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.content .headUser .title{
  float: left;
  margin-left: 0.75rem;
}
.content .headUser .title .name{
  font-size: 1rem;
  font-weight: bold;
}
.content .headUser .title .time{
  font-size: 0.75rem;
  color: #9b9b9b;
}
.content .headUser .likeIt{
  float: right;
}
.content .headUser .likeIt>image{
  width: 2.5rem;
  height: 2.5rem;
  float: left;
}
.content .headUser .likeIt>text{
  font-size: 0.75rem;
  color: #4a4a4a;
  line-height: 2.5rem;
  display: block;
  float: right;
}
.content .contentTxt{
  font-size:0.88rem;
}
.line{
  height: 0.63rem;
  background-color: #f3f3f3;
}
.bottomTextarea{
  position: fixed;
  bottom: 0.5rem;
  height: 2.19rem;
  width: 95%;
  left: 2.5%;
  background-color:#f6f6f6 ;
  border-radius: 1.09rem;

}
.bottomTextarea textarea{
  width: 100%;
  min-height: 2.19rem;
  padding: 0.5rem;
  font-size: 0.75rem;
}
.titleCenter{
  width: 95%;
  margin: 0 auto;
  height: 2.88rem;
  line-height: 2.88rem;
  font-size: 1rem;
  font-weight: bold;
  border-bottom: 0.06rem solid #e9e9e9;

}
.commentsList{
  width: 95%;
  margin: 0 auto;
  padding:0.63rem 0;
  border-bottom: 0.06rem solid #e9e9e9;
  overflow: hidden;
  position: relative;
}

.commentsList .left{
  width: 2.38rem;
  height: 2.38rem;
  float: left;
}
.commentsList .left>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.right{
  float: left;
  width: 80%;
  margin-left: 1rem;
}
.right .name{
  font-size: 0.88rem;
  font-weight: bold;
}
.right .time{
  font-size:0.75rem;
  color: #9b9b9b;
}
.right .comment{
  font-size: 0.88rem;

}
.rightTop{
  position: absolute;
  top: 0.3rem;
  right: 0.5rem;
}
.rightTop image{
  width: 2.5rem;
  height: 2.5rem;
  float: left;
}
.rightTop view{
  font-size: 0.75rem;
  line-height: 2.5rem;
  float: left;
}
.counting{
  position: absolute;
  top: 22rem;
  right: 1rem;
  width: 2.19rem;
  height: 1.06rem;
  background: rgba(000, 000, 000, 0.6);
  border-radius: 0.53rem;
  font-size: 0.75rem;
  color: #fff;
  text-align: center;
  line-height: 1.05rem;
}
.listDian{
  font-size: 2.5rem;
  position: fixed;
  top: 0rem;
  right: 1rem;
}
#myVideo{
  width: 100%;
  height: 15rem;
}