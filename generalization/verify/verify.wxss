.verify {
  height: 100%;
}

.verify .headerImg {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 110rpx auto 0;
}

.verify .title {
  font-size: 16px;
  color: #4a4a4a;
  text-align: center;
  display: block;
  margin-top: 44rpx;
}

.Bar {
  width: 440rpx;
  margin: 106rpx auto 0;
  overflow: hidden;
}

.Bar view {
  float: left;
}

.oneY {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #e8e8e8;
}

.oneX {
  width: 174rpx;
  height: 4rpx;
  background: #e8e8e8;
  margin-top: 15rpx;
}

.content {
  width: 600rpx;
  margin: 20rpx auto 0;
  overflow: hidden;
}

.content text {
  display: block;
  width: 200rpx;
  text-align: center;
  float: left;
  font-size: 12px;
  color: #4a4a4a;
}

.promotion {
  width: 85%;
  margin: 90rpx auto 0;
}

.promotion text {
  font-size: 14px;
  color: #4a4a4a;
  display: block;
  margin-top: 20rpx;
}

.fail {
  width: 95%;
  margin: 90rpx auto 0;
  font-size: 14px;
  color: #4a4a4a;
}

.fail text {
  color: #d85d27;
}

.fail .demand {
  display: block;
}

.btn {
  width: 600rpx;
  height: 80rpx;
  background: #d85d27;
  border-radius: 21.5px;
  font-size: 18px;
  color: #fff;
  line-height: 80rpx;
  margin-top: 120rpx;
}
