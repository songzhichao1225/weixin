.stadiumList {
  width: 90%;
  height: 136rpx;
  margin: 40rpx auto;
  clear: both;
}

.stadiumList .stadiumImg {
  width: 176rpx;
  height: 100%;
  float: left;
}

.stadiumList .content {
  float: left;
  width: 70%;
  height: 136rpx;
  margin-left: 24rpx;
  position: relative;
}

.stadiumList .content .name {
  font-size: 14px;
  color: #333;
}

.stadiumList .content .type {
  font-size: 12px;
  color: #d85d27;
}

.stadiumList .content  .distance {
  font-size: 12px;
  color: #9b9b9b;
  position: absolute;
  right: 0;
  bottom: 0;
}

.praise {
  height: 40rpx;
  margin-top: 10rpx;
  overflow: hidden;
}

.praise image:first-child {
  margin-left: 0;
}

.praise image {
  display: block;
  width: 0.9rem;
  height: 0.9rem;
  float: left;
  margin-left: 0.2rem;
}

.lookof {
  font-size: 14px;
  color: #9b9b9b;
  display: block;
  float: left;
}
