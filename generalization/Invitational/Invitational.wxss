.navHead{
  height: 2.69rem;
  border-top: 0.06rem solid #E9E9E9;
  border-bottom: 0.06rem solid #E9E9E9;
}
.fater{
  width: 90%;
  margin: 0 auto;
  height: 2.69rem;
}
.navHead .son{
  color: #9B9B9B;
  font-size: 1rem;
  width:50%;
  text-align: center;
  float: left;
  line-height: 2.56rem;
}
.navHead .son .line{
  width: 1.44rem;
  height: 0.13rem;
  background:#D85D27;
  margin: 0 auto;
}
.list{
  border-bottom: 0.06rem solid #9B9B9B;

}
.list .listSon{
   width: 90%;
   margin: 0.75rem auto;
   overflow: hidden;
}
.list .listSon .avatar{
  width: 4.38rem;
  height: 4.38rem;
  float: left;
}

.characterList{
  width: 95%;
  margin: 1rem  auto 0;
  overflow: hidden;
  position: relative;
  border-bottom:2rpx solid #ccc;
  padding-bottom: 0.5rem;
}
.characterList .img{
  width: 4.4rem;
  height:4.4rem;
  display: block;
  border-radius: 15rpx 15rpx;
  float: left;

}
.characterList .content{
  float: left;
  width:69%;
  margin-left: 0.8rem;
}
.characterList .content .header {
  overflow: hidden;
}
.characterList .content .header .text{
font-size: 16px;
color: #333333;
display: block;
float: left;
}
.characterList .content .header .image{
display: block;
width: 0.8rem;
height: 0.8rem;
float: left;
margin:0.2rem 0 0 0.3rem;
}

.characterList .content .header .imageTwo{
display: block;
width: 1.06rem;
height: 1.06rem;
float: left;
margin:0.1rem 0 0 0.3rem;
}
.characterList .content .header .textTwo{
display: block;
float: left;
padding:0 0.2rem;
margin:0.3rem 0 0 0.3rem;
background:linear-gradient(270deg,rgba(252,164,0,1) 0%,rgba(254,224,115,1) 100%);
border-radius:0.13rem;
font-size: 0.5rem;
color: #FFFFFF;
}
.characterList .content .signs{
  font-size: 14px;
  color: #4A4A4A;
  overflow: hidden;
 
}
.characterList .content .signs text{
  display: block;
  float: left;
  margin-left: 0.5rem;
}
.characterList .content .interest{
  font-size: 14px;
  color: #4A4A4A;
}
