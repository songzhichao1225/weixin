page{
  height: 100%;
}
.minePreference{
  height: 100%;
  border-top: 0.06rem solid #e9e9e9;
}
.minePreference .navTitle{
   border-bottom: 0.06rem solid #e9e9e9;
   overflow: hidden;
}

.minePreference .navTitle>view{
  width: 50%;
  float: left;
  font-size: 0.88rem;
  text-align: center;
  line-height: 2rem;
}
.minePreference .navTitle>view>view{
  width: 1rem;
  height: 0.12rem;
  margin: 0 auto;
}
.hidden{
  display: none;
}
.release{
  height: 88%;
  padding-bottom: 3rem;
}
 .release .noContent {
  padding-top: 30%;
  width: 14.12rem;
  margin: 0 auto;
}

.release .noContent>image {
  width: 100%;
  height: 10.5rem;
}

.release .noContent>text {
  font-size: 0.75rem;
  display: block;
  text-align: center;
}

.release .bottomBtn {
  position: fixed;
  bottom: 0;
  color: #fff;
  width: 100%;
  background: #D85D27;
}

.release .comtentSon {
  overflow: hidden;
  padding: 0.68rem 2.5%;
  border-bottom: 0.06rem solid #E9E9E9;
}

.release .comtentSon .left {
  width: 2.67rem;
  height: 2.67rem;
  float: left;
}

.release .comtentSon .left>image {
  width: 2.67rem;
  height: 2.67rem;
}

.release .comtentSon .right {
  float: left;
  margin-left: 0.87rem;
  line-height: 1.3rem;
}

.release .comtentSon .right>text:first-child {
  font-size: 0.88rem;
  color: #333;
  display: block;
  font-weight: bold;
}
.release .comtentSon .right>text:nth-child(2){
  font-size: 0.75rem;
  display: block;
}
.release .comtentSon .right>text{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap
}

.release .comtentSon .right .type{
  font-size: 0.75rem;
  
}
.release .comtentSon .right .type>text:first-child{
  padding: 0;
}
.release .comtentSon .right .type>text{
  padding-left: 0.3rem;
}
.release .comtentSon .right>text:last-child{
  font-size: 0.75rem;
}
.release .delet{
  width: 0.93rem;
  height: 1.06rem;
  position: absolute;
  right: 1rem;
}
.release .delet>image{
  width: 100%;
  height: 100%;
}