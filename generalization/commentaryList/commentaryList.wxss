.commentaryList{
  height: 100%;
  border-top: 0.06rem solid #e9e9e9;
  font-size: 0.75rem;
}
.son{
  padding: 0.75rem 0.44rem;
  overflow: hidden;
  border-bottom: 0.06rem solid #e9e9e9;
}
.son .left{
  width: 3.44rem;
  height: 3.44rem;
  float: left;
}
.son .left>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.right{
  width: 78%;
  float: left;
  margin-left:0.5rem;
}
.right .title{
  overflow: hidden;
}
.right .title>text:first-child{
   font-size: 1rem;
   font-weight: bold;

}
.right .title>text:first-child{
  font-size: 1rem;
  font-weight: bold;
  
}
.right .title>text:last-child{
  float: right;
  color: #9b9b9b;
}
.xing {
  margin-top: 0.4rem;
}

.xing>image {
  width: 0.75rem;
  height: 0.75rem;
}
.content{
  width: 100%;
}
.contentImg>image{
  width: 4.5rem;
  height: 4.5rem;
  margin-left: 0.2rem;
  border-radius: 0.19rem;
}
.contentImg>image:first-child{
  margin-left: 0;
}
.farter{
  padding: 0.3rem 0.3rem;
  background: #F3F3F3;
  border-radius: 0.19rem;
  overflow:hidden;
}
.farter image{
  width: 1rem;
  height: 1rem;
  display: block;
  float: left;
}
.farter>text{
  font-size: 0.88rem;
  font-weight: bold;
  float: left;
}