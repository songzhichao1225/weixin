.appraisals {
  height: 100%;
  padding-bottom: 2rem;
}

.boss {
  height: 2.88rem;
  border-top: 0.06rem solid #E9E9E9;
  border-bottom: 0.06rem solid #E9E9E9;
}

.boss>text {
  font-size: 1rem;
  line-height: 2.88rem;
  float: left;
  margin-left: 2.5%;
}

.boss .btn {
  width: 5rem;
  height: 1.75rem;
  border-radius: 1rem;
  border: 0.06rem solid rgba(216, 93, 39, 1);
  float: right;
  margin-top: 0.5rem;
  font-size: 0.75rem;
  color: #D85D27;
  text-align: center;
  line-height: 1.75rem;
  margin-right: 2.5%;
  background: #fff;
}

.boss image {
  width: 1.06rem;
  height: 1.25rem;
  float: right;
  margin-top: 0.8rem;
  margin-right: 0.5rem;
}

.line {
  height: 0.63rem;
  background: #F3F3F3;
}

.list {
  overflow: hidden;
}

.list .head {
  height: 2.69rem;
  padding-left: 2.5%;
  overflow: hidden;
  margin-top: 0.75rem;
}

.list .head .avatar {
  width: 2.69rem;
  height: 2.69rem;
  float: left;

}

.list .head .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 0.38rem;
}

.list .head .text {
  float: left;
  font-size: 0.88rem;
  margin-left: 0.63rem;
}

.list .head .text text {
  display: block;
  line-height: 1.2rem;
}

.list .head .right {
  font-size: 0.8rem;
  float: right;
  margin-right: 2.5%;
}

.list .center {
  margin-left: 2.5%;
  font-size: 0.88rem;
  overflow: hidden;
  margin-top: 0.88rem;
  padding-bottom: 0.75rem;
  border-bottom: 0.06rem solid #E9E9E9;
}

.list .center text {
  float: left;
}

.xing {
  float: left;
}

.xing image {
  width: 1.25rem;
  height: 1.25rem;
  margin-left: 0.2rem;
  float: left;
}

.list .content {
  width: 95%;
  margin: 0 auto;
  overflow: hidden;
}

.list .content text {
  font-size: 0.88rem;
  color: #9B9B9B;
  margin-top: 0.75rem;
  display: block;
  line-height: 1.25rem;
}

.list .content .listSon {
  width: 30%;
  height: 1.81rem;
  border-radius: 0.13rem;
  border: 0.06rem solid rgba(155, 155, 155, 1);
  margin-top: 0.63rem;
  font-size: 0.75rem;
  color: #9B9B9B;
  text-align: center;
  line-height: 1.81rem;
}

.list .content .listSon:nth-child(2) {
  margin-left: 0;
}

.list .content .listSon:nth-child(4n+1) {
  margin-left: 0;
}

.title {
  font-size: 1rem;
  margin-top: 0.75rem;
  margin-left: 2.5%;
}

.sheshi {
  margin-left: 2.5%;
  margin-top: 0.3rem;
  overflow: hidden;
}

.sheshi text {
  display: block;
  float: left;
  font-size: 0.88rem;
}

.comment {
  border-top: 0.06rem solid #E9E9E9;
  margin-top: 1rem;
}

.comment textarea {
  padding: 2.5%;
  height: 4rem;
  width: 100%;
  font-size: 0.75rem;
}

.putier {
 
  margin-left: 2.5%;
  margin-top: 2.5%;
  overflow: hidden;
}

.putier image {
  width: 4rem;
  height: 4rem;
  float: left;
  display: block;
  margin-left:0.3rem;
  margin-top: 0.2rem;
  border-radius: 0.3rem;
}

.btnBoss {
  width: 80%;
  height: 2.5rem;
  background: rgba(216, 93, 39, 1);
  border-radius: 1.34rem;
  color: #fff;
  margin-top: 0.75rem;
  font-size: 1rem;
}
.bossBabel{
  display: flex;
  flex-wrap:wrap;
  justify-content:space-between
}