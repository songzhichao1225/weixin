page {
  height: 100%;
}

.stadium {
  height: 100%;
}

.stadium .input {
  width: 85%;
  height: 60rpx;
  margin: 0 auto;
}

.stadium .input image {
  display: block;
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
}

.stadium .input input {
  font-size: 14px;
  color: #9b9b9b;
  display: block;
  float: left;
  margin-left: 10rpx;
}

.stadium .navTap {
  width: 90%;
  margin: 60rpx auto 0;
  font-size: 16px;
  color: #9b9b9b;
  overflow: hidden;
}

.stadium .navTap .navSon {
  width: 160rpx;
  float: left;
}

.stadium .navTap .navSon:nth-child(2) {
  margin-left: 40rpx;
}

.stadium .navTap .navSon .name {
  text-align: center;
  display: block;
}

.stadium .navTap .navSon .line {
  width: 40rpx;
  height: 4rpx;
  background: #333;
  display: block;
  margin: 10rpx auto 0;
}

.stadium .processingNot {
  height: 85%;
}

.stadium .processingNot .stadiumList {
  width: 95%;
  height: 156rpx;
  margin: 24rpx auto 0;
  overflow: hidden;
  position: relative
}

.stadium .processingNot .stadiumList .avatar {
 width: 156rpx;
 height: 156rpx;
 display: block;
 float: left;
 border-radius: 2px 0 0 2px;
}
.stadium .processingNot .stadiumList .content{
  margin-left: 24rpx;
  float: left;
}
.stadium .processingNot .stadiumList .content text{
  display: block;
  font-size: 14px;
  color: #4A4A4A;
}
.num{
  width: 144rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.num image{
  width: 100%;
  height: 100%;
}
.num .right{
  display: block;
  width: 144rpx;
  height: 40rpx;
  position: absolute;
  z-index: 9;
  color: #fff;
  font-size: 10px;
  text-align: center;
  line-height: 40rpx;
  right: 0;
  top: 0;
}
