page {
  height: 100%;
}

.redemption {
  height: 100%;
}

.backgroundGold {
  height: 6.31rem;
  background: linear-gradient(90deg, #FF8522 0%, #F8350D 100%);
  position: relative;
}

.backgroundTxt {
  position: absolute;
  width: 100%;
  top: 2rem;
}

.backgroundTxt>text:first-child {
  display: block;
  text-align: center;
  font-size: 1.75rem;
  color: #fff;
  font-weight: 500;
}

.backgroundTxt>text:last-child {
  font-size: 0.75rem;
  color: #fff;
  text-align: center;
  display: block;
}

.text {
  margin-top: 0.75rem;
  margin-left: 2.5%;
  font-size: 0.88rem;
}

.listSon {
  width: 95%;
  height: 5.44rem;
  background: linear-gradient(93deg, #FDEABC 0%, #F8D792 100%);
  border-radius: 0.38rem;
  margin: 0.75rem auto 0;
  position: relative;
  overflow: hidden;
}

.listSon:first-child {
  margin-top: 0;
}

.listSon .left {
  float: left;
  font-size: 2rem;
  font-weight: bold;
  line-height: 5.44rem;
  margin-left: 1.25rem;
}

.listSon .left>text {
  display: block;
  float: left;
}

.listSon .left>text:first-child {
  font-size: 1rem;
}

.listSon .center {
  float: right;
  padding: 1.3rem 0;
  width: 70%;
}

.listSon .center>text {
  display: block;
  line-height: 1.5rem;
}

.listSon .center>text:first-child {
  font-size: 1rem;
  font-weight: bold;
}

.listSon .center>text:nth-child(2) {
  font-size: 0.75rem;
  color: #D85D27;
}

.listSon .center>text:last-child {
  font-size: 0.75rem;
  color: #9b9b9b;
}

.operation .onclick .hao {
  width: 0.88rem;
  height: 0.88rem;
  display: block;
  margin: 0.2rem auto 0;
}

.operation .onclick>text {
  padding: 0 0.5rem;
  font-size: 0.88rem;
  font-weight: bold;
}

.operation .num {
  font-size: 0.75rem;
  text-align: center;
  margin-top: 0.5rem;
}

.operation {
  position: absolute;
  right: 0.5rem;
  top: 2rem;
}

.onclick {
  overflow: hidden;
}

.bottomTop {
  height: 2.56rem;
  width: 95%;
  margin: 0 auto;
  line-height: 2.56rem;
  font-size: 0.75rem;
  border-bottom: 0.06rem solid #e9e9e9;
  overflow: hidden;
}

.bottomTop>text:first-child {
  float: left;

}

.bottomTop>text:last-child {
  float: right;
  color: #D85D27;
}

.bindComfir {
  width: 80%;
  height: 2.69rem;
  background: #D85D27;
  border-radius: 1.34rem;
  line-height: 2.69rem;
  color: #fff;
  margin-top: 0.75rem;
}