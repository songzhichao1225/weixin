page{
  height: 100%;
}
.voucher {
  height: 100%;
}
.header{
  height: 2.69rem;
  border-top: 0.06rem solid #e9e9e9;
  border-bottom: 0.06rem solid #e9e9e9;
  display: flex;
  justify-content: center;
  
}
.header>view{
  font-size: 1rem;
  line-height: 2.5rem;
}
.header>view:first-child{
  padding-right: 0.5rem;
}
.header>view:last-child{
  padding-left: 0.5rem;
}
.header>view .line{
  height: 0.13rem;
  width: 1.19rem;
  background-color: #D85D27;
  margin: 0 auto;
}
.contentNull{
  width: 60%;
  position: absolute;
  top: 30%;
  left: 20%;
}
.contentNull>image{
  width: 100%;
  height: 11rem;
}
.contentNull text{
  font-size: 0.88rem;
  text-align: center;
  display: block;
}
.scrollView{
  height: 93%;
}
.content{
  width: 90%;
  height: 6rem;
  background: linear-gradient(93deg, #FDEABC 0%, #F8D792 100%);
  border-radius: 0.38rem;
  margin: 0.75rem auto 0;
  position: relative;
}
.content .left{
  font-size: 2.13rem;
  line-height: 6rem;
  width:25%;
  float: left;
  display: flex;
  justify-content: center;
}
.content .left>span:first-child{
  font-size: 1rem;
  display: block;
  float: left;
}

.content .left>span:last-child{
  float: left;
}
.content .right{
  width: 70%;
  float: left;
  padding-top: 0.9rem;
}
.content .right>text{
  display: block;
}
.content .right>text:first-child{
  font-size: 1rem;
  font-weight: bold;
}
.content .right>text:nth-child(2){
  font-size: 0.75rem;
  color: #D85D27;
  margin-top: 0.3rem;
}
.content .right>text:nth-child(3){
  font-size: 0.75rem;
  color: #9b9b9b;
  margin-top: 0.3rem;
}
.imageFie{
  width: 4.06rem;
  height: 3.5rem;
  position: absolute;
  right: 0;
  top: 1.4rem;
}
