page {
  height: 100%;
  background: #f3f3f3;
}

.cashOut {
  width: 95%;
  margin: 1rem auto 0;
  background: #FFFFFF;
  border-radius: 0.38rem;
  padding: 0.5rem 2.5% 1rem;
}

.wechat {
  height: 3rem;
  border-bottom: 0.12rem solid #E1E0E1;
}

.wechat>image {
  width: 1.5rem;
  height: 1.5rem;
  float: left;
  margin-top: 0.8rem;
  margin-left: 0.5rem;
}

.wechat>text {
  display: block;
  float: left;
  font-size: 0.88rem;
  color: #9B9B9B;
  line-height: 3rem;
  margin-left: 0.75rem;
}

.radio {
  float: right;
  line-height: 3rem;
}

radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
}

radio .wx-radio-input.wx-radio-input-checked::before {

  width: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.text {
  margin-top: 1.31rem;
}

.inputBoss {
  overflow: hidden;
  border-bottom: 0.12rem solid #e9e9e9;
}

.inputBoss>text {
  font-size: 1rem;
  float: left;
  line-height: 3rem;
}

.input {
  font-size: 1rem;
  height: 3rem;
  float: left;
}

.textTwo {
  font-size: 0.88rem;
  color: #9B9B9B;
  margin-top: 0.75rem;
}

.textTwo>text:last-child {
  color: #D85D27;
}

.bindComfire {
  width: 95%;
  margin: 2.38rem auto 0;
  height: 2.5rem;
  background: #D85D27;
  border-radius: 1.34rem;
  line-height: 2.5rem;
  color: #fff;
}


/* 支付密码css start */
.bg_layer {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9998;
}

.input_main {
  position: fixed;
  left: 10%;
  top: 200rpx;
  width: 80%;
  height: 15.5rem;
  background-color: #fff;
  z-index: 9999;
}

.input_title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.input_back {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input_back text {
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 1rpx solid #aaa;
  border-width: 5rpx 0 0 5rpx;
  transform: rotate(-45deg);
}

.input_tip {
  margin: 30rpx;
  font-size: 0.88rem;
  color: #333;
  text-align: center;
}

/* 密码掩码模拟 */
.input_row {
  width: 90%;
  margin: 0 auto;
  height: 98rpx;
  position: relative;
  display: flex;
  align-items: center;
  border: 1rpx solid #e2e2e2;
  border-radius: 20rpx;
}

.input_row .pwd_item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  border-right: 1rpx solid #e2e2e2;
  position: relative;
}

.pwd_item:nth-last-of-type(1) {
  border-right: 0;
}

.pwd_item text {
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #555;
}


.forget_pwd {
  float: left;
  margin: 30rpx;
  text-align: right;
  font-size: 24rpx;
  color: #9B9B9B;
}

/* 文本输入框位置: 设置到左边隐藏 */
.input_control {
  position: relative;
  left: -1200rpx;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;

}
