/**index.wxss**/

page {
  height: 100%;
}

.content {
  margin: 0;
  color: #4a4a4a;
  overflow: hidden;
  min-height: 110%;
}

.isSignN {
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 99;
}

.isSignN .isSignbox {
  width: 676rpx;
  height: 544rpx;
  position: absolute;
  z-index: 999;
  left: 37rpx;
  top: 128rpx;
}

.isSignN .isSignbox .img {
  width: 100%;
  height: 100%;
}

.isSignbox .txt {
  display: block;
  position: absolute;
  top: 350rpx;
  font-size: 16px;
  color: #000;
  left: 200rpx;
}
.isSignN .close{
  width: 66rpx;
  height: 66rpx;
  margin: 750rpx auto 0;

}
.isSignN .close image{
  width: 100%;
  height: 100%;
}
.content .headerCity {
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
  background:#F5520B ;
}

.inputBox {
  width: 65%;
  margin-left: 0.7rem;
  height: 1.3rem;
  float: left;
  border-radius: 200px;
  background: #fff;
  margin-top: 0.2rem;
}

.content .headerCity text {
  width: 15%;
  font-size: 14px;
  display: block;
  text-align: center;
  float: left;
  height: 1.8rem;
  line-height: 1.8rem;
  color: #fff;
}
.content .news{
  width: 1.25rem;
  height: 1.25rem;
  margin-top: 0.2rem;
  margin-left: 0.5rem;
}
.content .headerCity .image {
  display: block;
  width: 0.7rem;
  height: 0.4rem;
  float: left;
  margin-top: 0.7rem;
}


.content .headerCity input {
  display: block;
  float: left;
  width: 50%;
  height: 1.3rem;
  margin-left: 0.2rem;
  font-size: 14px;
}
 .content .bannerBack .back{
   width: 100%;
   height: 6rem;
 }
.content .banner {
  width: 90%;
  height: 7.25rem;
  margin: -6.2rem auto;
}

.content .banner image {
  width: 100%;
  height: 100%;
  border-radius: 0.75rem;
}

.content .homeSelect {
  width: 100%;
  height: 5.5rem;
  margin: 7.1rem auto 0;
  display: flex;
  border-bottom: 0.06rem solid #ccc;
  margin-bottom: 1rem;
}

.content .homeSelect view {
  flex: 1;
}

.content .homeSelect view>image {
  width: 2.3rem;
  height: 2.3rem;
  display: block;
  margin: 0 auto;
}

.content .homeSelect view>text {
  font-size: 12px;
  color: #333;
  text-align: center;
  display: block;
  margin-top: 1rem;
}

.content .projectNav {
  width: 95%;
  height: 1.3rem;
  margin: 0 auto;
  display: flex;
}

.content .projectNav>view {
  flex: 1;
  margin-left: 1rem;
  position: relative;
}

.content .projectNav>view>text {
  font-size: 14px;
  display: block;
  text-align: center;
  line-height: 1.3rem;
}

.content .projectNav>view>image {
  width: 0.4rem;
  height: 0.3rem;
  position: absolute;
  right: 0;
  top: 0.6rem;
}

.content .projectList {
  height: 50%;
  min-height: 800rpx;
  overflow: hidden;
  position: relative;
  margin-top: 20rpx;
}

.content .projectList .projectSon {
  width: 100%;
  height: 8.8rem;
  position: relative;
  border-top: 1px solid #ccc;
}

.content .projectList .projectSon .avatar {
  width: 5rem;
  float: left;
  margin-left: 0.8rem;
}

.content .projectList .projectSon .avatar .avatarP {
  width: 5rem;
  height: 5rem;
  border-radius: 10px;
  margin-top: 1.2rem;
}

.content .projectList .projectSon .avatar .aIcon {
  width: 44rpx;
  height: 40rpx;
  margin-left: 0.3rem;
  margin-top: 0.2rem;
  display: block;
  float: left;
}

.content .projectList .projectSon .avatar text {
  display: block;
  padding: 0 0.3rem;
  height: 0.8rem;
  font-size: 10px;
  color: #fff;
  text-align: center;
  line-height: 0.8rem;
  background: #f5a623;
  border-radius: 2px;
  float: left;
  margin-left: 0.4rem;
  margin-top: 0.4rem;
}

.content .projectList .projectSon .introduction {
  width: 66%;
  float: left;
  overflow: hidden;
  margin-top: 1.2rem;
  margin-left: 0.9rem;
}

.content .projectList .projectSon .introduction .title {
  overflow: hidden;
}

.content .projectList .projectSon .introduction .title text {
  font-size: 14px;
  color: #333;
  display: block;
  float: left;
}

.content .projectList .projectSon .introduction .title image {
  width: 0.6rem;
  height: 0.6rem;
  display: block;
  float: left;
  margin: 0.25rem 0 0 0.2rem;
}

.content .projectList .projectSon .introduction .mode {
  overflow: hidden;
}

.content .projectList .projectSon .introduction .mode text {
  display: block;
  font-size: 14px;
  color: #4a4a4a;
  margin-left: 0.5rem;
  float: left;
}

.content .projectList .projectSon .introduction .time {
  overflow: hidden;
}

.content .projectList .projectSon .introduction .time text {
  display: block;
  font-size: 14px;
  color: #4a4a4a;
  margin-left: 0.5rem;
  float: left;
}

.content .projectList .projectSon .introduction .address {
  overflow: hidden;
}

.content .projectList .projectSon .introduction .address text {
  display: block;
  font-size: 14px;
  color: #4a4a4a;
  margin-left: 0.5rem;
  float: left;
}

.content .projectList .projectSon .introduction .cost {
  overflow: hidden;
}

.content .projectList .projectSon .introduction .cost text {
  display: block;
  font-size: 14px;
  color: #4a4a4a;
  margin-left: 0.3rem;
  float: left;
}
.content .projectList .projectSon .introduction .cost text:last-child{
  float: right;
}

.content .projectList .projectSon .status {
  width: 94rpx;
  height: 84rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 99;
}

.content .projectList .projectSon .status image {
  width: 100%;
  height: 100%;
  display: block;
}

.model {
  width: 100%;
  height: 2rem;
  display: block;
  text-align: center;
  font-size: 16px;
  position: absolute;
  top: 1rem;
}

.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: absolute;
  top: 0;
  z-index: 100;
}

.mask .activity {
  width: 25%;
  height: 21.1rem;
  background-color: #fff;
}

.mask .activity .activitySon {
  width: 70%;
  height: 2.3rem;
  margin: 0 auto;
}

.mask .activity .activitySon text {
  font-size: 12px;
  color: #333;
  line-height: 2.3rem;
}

.mask .activity .activitySon image {
  width: 0.3rem;
  height: 0.4rem;
  display: block;
  float: right;
  margin-top: 1rem;
}

.mask .activityTwo {
  width: 25%;
  position: absolute;
  top: 0;
  left: 25%;
  background-color: #fff;
}

.mask .activityTwo .activityTwoSon text {
  font-size: 12px;
  color: #9b9b9b;
  display: block;
  text-align: center;
  height: 2rem;
  line-height: 2rem;
}

.mask .sort {
  width: 25%;
  position: absolute;
  top: 0;
  left: 25%;
  background-color: #fff;
}

.mask .sort text {
  font-size: 12px;
  color: #9b9b9b;
  display: block;
  text-align: center;
  height: 2rem;
  line-height: 2rem;
}

.flexd {
  width: 108rpx;
  height: 108rpx;
  position: fixed;
  right: 24rpx;
  bottom: 70rpx;
  z-index: 999;
}

.flexd image {
  width: 100%;
  height: 100%;
}
