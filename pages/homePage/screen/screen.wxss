.screen{
  height: 100%
}
.screen .boss{
   width: 60%;
   margin: 0.5rem auto 0;
}
.screen .boss:first-child{
  margin-top: 0
}
.screen .boss text{
  font-size: 14px;
}
.boss .modeH{
  margin-top: 0.2rem;
  overflow: hidden;
}
.boss .modeH text{
  width: 5.3rem;
  height: 1.5rem;
  font-size: 12px;
  border: 1px solid #9B9B9B;
  border-radius: 6px;
  display: block;
  text-align: center;
  line-height: 1.5rem;
  float: left
}
.boss .modeH .right{
  float: right;
}
.boss .modeH .picker{
  width: 5.3rem;
  height: 1.5rem;
  font-size: 12px;
  border: 1px solid #9B9B9B;
  border-radius: 6px;
  display: block;
  text-align: center;
  line-height: 1.5rem;
  float: left
}
.screen .btn{
  width: 60%;
  height: 1.7rem;
  margin: 1.7rem auto 0;
  display: block;
  background: #D85D27;
  border-radius: 30px;
  font-size: 12px;
  color: #FFFFFF;
  line-height: 1.7rem;

}