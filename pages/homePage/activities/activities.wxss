page {
  height: 100%;
  font-family: PingFangSC-Semibold;
}

text {
  display: block;
}

image {
  display: block;
}

.activities {
  padding-bottom: 4rem;
}

.prompt {
  width: 100%;
  height: 2rem;
  margin: 0 auto;
  background: #faeeed;
  padding: 0.3rem 0;
}

.prompt image {
  width: 1.1rem;
  height: 1.1rem;
  display: block;
  float: left;
  margin-left: 2.5%;
}

.prompt text {
  font-size: 12px;
  color: #4a4a4a;
  display: block;
  width: 91%;
  float: left;
  margin-left: 1%;
}

.countdown {
  font-size: 28rpx;
  color: #d85d27;
  text-align: center;
  line-height: 1.56rem;
  border-top: 0.06rem solid #E9E9E9;
  border-bottom: 0.06rem solid #E9E9E9;
}

.line {
  height: 0.63rem;
  background: rgba(243, 243, 243, 1);
  margin-top: 1rem;
}

.contnet {
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
  background: #fff;
  padding-top: 1rem;

}
.contnet .boss{
  width: 95%;
  margin: 0 auto;
}

.status {
  width: 93.8rpx;
  height: 83.4rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.status image {
  width: 100%;
  height: 100%;
}

.contnet .contentTop {
  width: 95%;
  margin: 0 auto;
  overflow: hidden;
}

.contnet .contentTop .contentImg {
  width: 152rpx;
  height: 152rpx;
  border-radius: 10px;
  display: block;
  float: left;
}

.contnet .contentTop .contentText {
  float: left;
  margin-left: 2.8rem;
  margin-top: 0.8rem;
}

.contnet .contentTop .contentText text {
  display: block;
  font-size: 14px;
  color: #333;
}

.contnet .publisher {
  width: 95%;
  margin: 0.75rem auto 0;
  overflow: hidden;
}

.contnet .publisher .header {
  width: 100%;
  height: 2.1rem;
  padding: 0.73rem 0;
  border-bottom: 0.06rem solid #E9E9E9;
}

.contnet .publisher .header image {
  display: block;
  float: left;
  width: 2.1rem;
  height: 2.1rem;
  border-radius: 5px;
  margin-left: 1.7rem;
}

.contnet .publisher .header text {
  line-height: 2.1rem;
  display: block;
  font-size: 16px;
  color: #333;
  font-weight: bold;
  float: left;
}

.contnet .publisher .publisherTxt {
  height: 1.25rem;
  margin-top: 0.5rem;
}

.contnet .publisher .publisherTxt .one {
  width: 48%;
  float: left;
}

.contnet .publisher .publisherTxt .two {
  width: 48%;
  float: left;
}

.contnet .publisher .publisherTxt .one text:first-child {
  font-size: 14px;
  color: #9b9b9b;
  line-height: 1.3rem;
}

.contnet .publisher .publisherTxt .two text:first-child {
  color: #9B9B9B;
}

.contnet .publisher .publisherTxt image {
  width: 0.6rem;
  height: 0.8rem;
  display: block;
  float: left;
  margin-top: 0.25rem;
  margin-left: 0.7rem;
}

.contnet .publisher .publisherTxt text {
  font-size: 14px;
  color: #333;
  float: left;
  line-height: 1.3rem;
}

.contnet .publisher .publisherTxt .cooperate {
  color: #d85d27;
  font-size: 12px;
  margin-left: 0.8rem;
}

.contnet .publisher .publisherTxt .money {
  color: #d85d27;
  margin-left: 0.6rem;
}

.contnet .publisher .publisherTxt .way {
  color: #9b9b9b;
}

.contnet .publisher .publisherTxt .time {
  margin-left: 0.6rem;
}

.participants {
  margin: 0.69rem auto 0;
  width: 95%;
}

.participants .people {
  font-size: 16px;
  color: #333;
  font-weight: bold;
  padding: 0.56rem 0;
  border-bottom: 0.06rem solid #E9E9E9;
}

.participants .TeamA {
  margin-top: 0.81rem;
  overflow: hidden;
  padding-bottom: 1.56rem;
  border-bottom: 0.06rem solid #E9E9E9;
}

.participants .TeamA text {
  font-size: 17px;
  color: #333;
  float: left;
  margin-top: 26rpx;
}

.participants .TeamB {
  margin-top: 0.81rem;
  overflow: hidden;
  padding-bottom: 1.56rem;
  border-bottom: 0.06rem solid #E9E9E9;
} 

.participants .TeamB text {
  font-size: 17px;
  color: #333;
  float: left;
  margin-top: 26rpx;
}

.participants .peopleList {
  width: 538rpx;
  float: left;
  margin-left: 50rpx;
}

.participants .peopleList .son:nth-child(3N+1) {
  margin-left: 0;
}

.participants .peopleList .son {
  width: 157.8rpx;
  height: 86rpx;
  float: left;
  margin-left: 26rpx;
  position: relative;
  margin-top: 26rpx;
}

.participants .peopleList .son .logo {
  width: 87.2rpx;
  height: 87.2rpx;
  display: block;
  float: left;
  border-radius: 6rpx;
}

.participants .peopleList .son .project {
  width: 44.6rpx;
  height: 39.8rpx;
  display: block;
  float: left;
  margin-left: 16.2rpx;
  margin-top: 12rpx;
}

.participants .peopleList .son .grade {
  width: 52.6rpx;
  height: 22rpx;
  background: #f5a623;
  border-radius: 4rpx;
  font-size: 20rpx;
  margin-top: 12.2rpx;
  text-align: center;
  line-height: 22rpx;
  color: #fff;
  float: left;
  margin-left: 12rpx;
}

.participants .peopleList .son .TeamAson {
  width: 100%;
  height: 30rpx;
  background: #D85D27;
  position: absolute;
  bottom: 0;
  left: 0;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  font-size: 12px;
}

.participants .peopleList .son .TeamAsonTwo {
  width: 87.2rpx;
  height: 30rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  font-size: 12px;
  background: linear-gradient(180deg, rgba(98, 98, 98, 0.6) 0%, rgba(51, 51, 51, 0.6) 100%);
  border-radius: 0rem 0rem 0.19rem 0.19rem;


}


.releaseTime {
  width: 95%;
  margin: 40rpx auto 0;
  overflow: hidden;
}

.releaseTime text:first-child {
  font-size: 14px;
  color: #9b9b9b;
  float: left;
}

.releaseTime text:last-child {
  font-size: 14px;
  color: #333;
  float: left;
  margin-left: 34rpx;
}

.btn {
  width: 654rpx;
  height: 80rpx;
  background: #d85d27;
  border-radius: 40rpx;
  margin: 28rpx auto;
  font-size: 36rpx;
  color: #fff;
  line-height: 80rpx;
  position: fixed;
  z-index: 1000;
  bottom: 0;
  left: 48rpx;
}

.invite {
  width: 87.2rpx;
  height: 87.2rpx;
  font-size: 12px;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  color: #D85D27;
  border-radius: 0.19rem;
  border: 0.06rem solid rgba(216, 93, 39, 1);
}

.invite image {
  width: 100%;
  height: 100%;
  position: absolute;
}