page{
  height: 100%;
}
.goldMall{
  height: 100%;
 
}
.goldMall .navTop{
  height: 96rpx;
}
.goldMall .navTop scroll-view{
  height: 96rpx;
  display: flex;
}
.goldMall .navTop view{
  padding:0.2rem 0.5rem;
  float: left;
   flex:1;
}
.goldMall .navTor{
   width: 90%;
   margin: 0 auto;
}
.goldMall .navTor .navSon{
  display: flex;
  flex-wrap:wrap;
  
}
.goldMall .navTor .navSon view{
  width: 86rpx;
  flex: 1;
  font-size: 20rpx;
  text-align: center;
  margin-top:24rpx;
  margin-left: 51.2rpx;
   
}
.goldMall .navTor .navSon view image{
   width: 86rpx;
   height: 86rpx;
}

.goldMall .navTor .navSon view:first-child{
  margin-left: 0;
}
.goldMall .navTor .navSon view:nth-child(6){
  margin-left: 0;
}
.goldMall .mallList{
  width: 90%;
  margin: 0 auto;
}
.goldMall .mallList .mallListSon{
  width: 48%;
  height: 12.6rem;
  float: left;
  margin-left: 4%;
  margin-top: 0.8rem;
  position: relative;
}
.goldMall .mallList .mallListSon:nth-child(2n+1){
  margin-left: 0;
}
.goldMall .mallList .mallListSon image{
  width: 100%;
  height: 10.6rem;
  border-radius: 3px;
}
.goldMall .mallList .mallListSon text{
  font-size: 12px;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}