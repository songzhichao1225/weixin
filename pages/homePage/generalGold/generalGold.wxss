page {
  height: 100%;
}

.generaGold {
  height: 100%;
}

text {
  display: block;
}

.generaGold .banne {
  width: 100%;
}

.generaGold .showt {
  width: 364rpx;
  height: 164rpx;
  position: absolute;
  left: 50%;
  top: 288rpx;
  margin-left: -182rpx;
  background: #fff;
  box-shadow: 0 2px 4px 0;
  border-radius: 12rpx;
}

.generaGold .showt text:first-child {
  font-size: 28rpx;
  color: #9b9b9b;
  text-align: center;
  margin-top: 32rpx;
}

.generaGold .showt text:nth-child(2) {
  font-size: 48rpx;
  color: #d85d27;
  text-align: center;
  margin-top: 16rpx;
}

.generaGold .showt .goldImg {
  width: 95rpx;
  height: 95rpx;
  position: absolute;
  left: -45rpx;
  top: 90rpx;
}

.generaGold .showt .goldImg image {
  width: 100%;
  height: 100%;
}

.generaGold .btn {
  width: 614rpx;
  height: 82rpx;
  background-image: linear-gradient(-180deg, #fb9549 0%, #df4c0c 100%);
  box-shadow: 0 2px 4px 0 rgba(124, 124, 124, 0.50);
  border-radius: 100px;
  margin: 100rpx auto 0;
  color: #fff;
}

.generaGold .option {
  width: 95%;
  height: 136rpx;
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(173, 173, 173, 0.50);
  border-radius: 6px;
  margin: 32rpx auto 0;
  display: flex;
}

.generaGold .option view {
  flex: 1;
  margin-top: 24rpx;
}

.generaGold .option view text:first-child {
  font-size: 16px;
  color: #333;
  letter-spacing: -0.29px;
  text-align: center;
}

.generaGold .option view text:last-child {
  font-size: 12px;
  color: #9b9b9b;
  letter-spacing: -0.29px;
  text-align: center;
  margin-top: 10rpx;
}

.generaGold .share {
  width: 95%;
  height: 138rpx;
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(173, 173, 173, 0.50);
  border-radius: 6px;
  margin: 32rpx auto 0;
  position: relative;
}

.generaGold .share .centent {
  font-size: 28rpx;
  color: #333;
  line-height: 138rpx;
  margin-left: 24rpx;
}

.generaGold .share .centent text {
  display: inline-block;
  font-size: 40rpx;
  color: #f64a0c;
}

.generaGold .share .title {
  width: 276rpx;
  height: 50rpx;
  background-image: linear-gradient(90deg, #ff9609 0%, #e35715 100%);
  border-radius: 6px 0 18px 0;
  font-size: 12px;
  color: #fff;
  letter-spacing: -0.29px;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top:-20rpx;
  left: 0;
}
