
page{
  height: 100%;
}
.nearby{
  height: 100%;
}
.joon{
  font-size: 14px;
  display: block;
  float: left;
  line-height: 1.9rem;
}
.nearby .search{
   width: 90%;
   height:1.5rem;
   margin: 0 auto 1rem;
   border-radius: 200px;
   background: #ccc;
}
.nearby .search>image{
  width: 0.8rem;
  height: 0.8rem;
  margin:0.35rem 0 0 0.9rem;
  float: left;
}
.nearby .search input{
  font-size: 14px;
  float: left;
  height: 1.5rem;
  margin-left: 0.3rem;
  
}
.nearby .projectNav{
  width: 90%;
  height: 1.3rem;
  margin: 0 auto;
  display: flex;
  overflow: hidden;
  border-bottom: 0.06rem solid #ccc;
}
.nearby .projectNav>view{
 flex: 1;
 margin-left: 3rem;
 position: relative;
 height: 2.5rem;
 padding-bottom:0.8rem;
}
.nearby .projectNav>view>text{
  font-size: 14px;
  display: block;
  text-align: center;
  line-height: 1.3rem;
}
.nearby .projectNav>view>image{
  width: 0.4rem;
  height: 0.3rem;
  position: absolute;
  right: 0;
  top:0.6rem;
}
.nearby .nearbyList{
  height: 90%;
  position: relative;
  overflow: hidden;
}
.mask{
  width: 100%;
  height: 100%;
  background:rgba(0, 0, 0,0.7);
  position: absolute;
  top: 0;
  z-index: 100
}
.mask .activity{
  width: 33.33%;
  background-color: #fff
}
.mask .activity .activitySon{
  width: 70%;
  height: 2.3rem;
  margin: 0 auto;
}
.mask .activity .activitySon text{
  font-size: 12px;
  color: #333333;
  line-height: 2.3rem;
}
.mask .activity .activitySon image{
  width: 0.3rem;
  height: 0.4rem;
  display: block;
  float: right;
  margin-top: 1rem;
}
.mask .activityTwo{
   width: 25%;
   position: absolute;
   top: 0;
   left:25%;
   background-color: #fff
}
.mask .activityTwo .activityTwoSon text{
 font-size: 12px;
 color: #9B9B9B;
 display: block;
 text-align: center;
 height: 2rem;
 line-height: 2rem;
}
.mask .sort{
   width: 33.33%;
   position: absolute;
   top: 0;
   left:33.33%;
   background-color: #fff
}
.mask .sort text{
  font-size: 12px;
  color: #9B9B9B;
  display: block;
  text-align: center;
  height: 2rem;
  line-height: 2rem;
}
.characterList{
  width: 95%;
  margin: 1rem  auto 0;
  overflow: hidden;
  position: relative;
  border-bottom:2rpx solid #ccc;
  padding-bottom: 0.5rem;
}
.characterList .img{
  width: 4.4rem;
  height:4.4rem;
  display: block;
  border-radius: 15rpx 15rpx;
  float: left;

}
.characterList .content{
  float: left;
  width:69%;
  margin-left: 0.8rem;
}
.characterList .content .header {
  overflow: hidden;
}
.characterList .content .header .text{
font-size: 16px;
color: #333333;
display: block;
float: left;
}
.characterList .content .header .image{
display: block;
width: 0.8rem;
height: 0.8rem;
float: left;
margin:0.4rem 0 0 0.3rem;
}

.characterList .content .header .imageTwo{
display: block;
width: 1.4rem;
height: 1.4rem;
float: left;
margin:0.1rem 0 0 0.3rem;
}
.characterList .content .header .textTwo{
display: block;
float: left;
padding:0.1rem 0.2rem;
margin:0.3rem 0 0 0.3rem;
background: #F5A623;
border-radius: 2px;
font-size: 10px;
color: #FFFFFF;
}
.characterList .content .signs{
  font-size: 14px;
  color: #4A4A4A;
  overflow: hidden;
 
}
.characterList .content .signs text{
  display: block;
  float: left;
  margin-left: 0.5rem;
}
.characterList .content .interest{
  font-size: 14px;
  color: #4A4A4A;
}
