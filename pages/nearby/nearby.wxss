page {
  height: 100%;
  background-color: #F3F3F3;
}

.nearby {
  height: 100%;
}

.headNav {
  height: 2.88rem;
  background: #D85D27;
  color: #fff;

}

.headNav>view {
  width: 18%;
  float: left;
  font-family: PingFangSC-Semibold, PingFang SC;
  margin-top: 0.8rem;
  opacity: 0.6;
}

.headNav>view:first-child {
  margin-left: 30%;
  margin-right: 6%;
}

.headNav>view>view {
  height: 0.12rem;
  width: 1.13rem;
  background: #fff;
  margin: 0.28rem auto 0;
  border-radius: 0.06rem;
}

.player {
  height: 92.5%;
}

.top {
  overflow: hidden;
  height: 2.75rem;
  background-color: #fff;

}

.top .picker {
  width: 33.33%;
  float: left;
  line-height: 2.75rem;
  text-align: center;
  font-size: 0.88rem;
  display: flex;
  justify-content: center;

}

.top .picker>text {
  float: left;
  display: block;

}

.top .picker>image {
  width: 0.38rem;
  height: 0.25rem;
  margin-left: 0.25rem;
  display: block;
  float: left;
  margin-top: 1.3rem;
}

.dynamicState {
  height: 90.8%;
  overflow-y: auto;
  background-color: #f3f3f3;
}

.dynamicState .noContent {
  width: 60%;
  margin: 0 auto;
}

.dynamicState .noContent image {
  width: 100%;
  height: 10rem;
  margin-top: 1rem;
}

.dynamicState .noContent view {
  text-align: center;
  font-size: 0.75rem;
}

.dynamicState .noContent button {
  font-size: 0.8rem;
  width: 70%;
  background: #D85D27;
  color: #fff;
  margin-top: 1rem;
}


.dynamicState .left {
  width: 49%;
  float: left;
  border-radius: 0.38rem;
  padding-bottom: 0.5rem;
}

.dynamicState .left>view {
  overflow: hidden;
  padding-bottom: 0.5rem;
  margin-top: 0.5rem;
  background-color: #fff;

}

.dynamicState .right>view {
  overflow: hidden;
  padding-bottom: 0.5rem;
  margin-top: 0.5rem;
  background-color: #fff;

}

.dynamicState .right {
  width: 49%;
  float: right;
  border-radius: 0.38rem;
  padding-bottom: 0.5rem;
}


.dynamicState image {
  width: 100%;
}

.dynamicState .headImg {
  border-radius: 0.38rem 0.38rem 0 0;
}

.dynamicState .title {
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 0.75rem;
}

.dynamicState .userDetails {
  padding-bottom: 0.5rem;
  width: 90%;
  margin: 0.3rem auto 0;
  overflow: hidden;
}

.dynamicState .userDetails>image {
  width: 1.5rem;
  height: 1.5rem;
  border-radius: 50%;
  float: left;
}

.dynamicState .userDetails>.view {
  width: 50%;
  text-align: center;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 0.9rem;
  margin-top: 0.2rem;
}

.dynamicState .userDetails .fabulou {
  width: 10%;
  font-size: 0.75rem;
  line-height: 1.2rem;
}

.join {
  width: 5.56rem;
  height: 1.34rem;
  background: rgba(216, 93, 39, 0.12);
  border-radius: 0.19rem;
  border: 0.03rem solid #D85D27;
  color: #D85D27;
  font-size: 0.75rem;
  clear: both;
  line-height: 1.34rem;
  text-align: center;
  margin-top: 2rem;
}

.boss {
  position: relative;
}

.distance {
  position: absolute;
  width: 3rem;
  height: 1.06rem;
  border-radius: 0.5rem;
  background-color: rgba(000, 000, 000, 0.6);
  left: 0.2rem;
  bottom: 2.5rem;
  font-size: 0.75rem;
  color: #fff;
  text-align: center;
}

.fire {
  position: absolute;
  padding-right: 0.5rem;
  height: 1.06rem;
  border-radius: 0.5rem;
  background-color: rgba(000, 000, 000, 0.6);
  left: 0.2rem;
  bottom: 1rem;
  font-size: 0.75rem;
  color: #fff;
  line-height: 1.06rem;

}

.fire>text {
  padding-left: 0.3rem;
}

.fire>image {
  width: 0.75rem;
  height: 0.75rem;
  margin-top: 0.15rem;
  margin-left: 0.5rem;
}

.bigShot {
  height: 86%;
}

.bigShot .top {
  border-bottom: 0.06rem solid #e9e9e9;
}

.bigShotList {
  background-color: #fff;
  height: 100%;
}

.bigShotSon {
  border-bottom: 0.06rem solid #e9e9e9;
  padding: 0.88rem 2.5%;
  overflow: hidden;
}

.bigShotSon .left {
  width: 4.88rem;
  float: left;

}

.bigShotSon .left>image {
  width: 4.88rem;
  height: 4.88rem;
  border-radius: 0.38rem;
}

.bigShotSon .left .prople {
  height: 1.13rem;
}

.bigShotSon .left .prople>image {
  display: block;
  float: left;
}

.bigShotSon .left .prople>image:first-child {
  width: 0.94rem;
  height: 0.94rem;
}

.bigShotSon .left .prople>image:nth-child(2) {
  width: 1.13rem;
  height: 1.13rem;
  margin-left: 0.4rem;
}

.bigShotSon .left .prople>text {
  width: 52.6rpx;
  height: 22rpx;
  background: linear-gradient(270deg, rgba(252, 164, 0, 1) 0%, rgba(254, 224, 115, 1) 100%);
  border-radius: 0.13rem;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #fff;
  display: block;
  float: left;
  text-align: center;
  margin-top: 0.2rem;
  margin-left: 0.3rem;
}

.bigShotSon .right {
  width: 68%;
  float: left;
  margin-left: 1.5rem;
  line-height: 1.5rem;
  position: relative;
}

.bigShotSon .right .name {
  font-size: 1rem;
  font-weight: bold;
}

.bigShotSon .right .range {
  font-size: 0.88rem;
}

.bigShotSon .right .range>text {
  padding-left: 0.5rem;
}

.bigShotSon .right .range>text:first-child {
  padding-left: 0;
}

.bigShotSon .right .score {
  font-size: 0.88rem;
}

.bigShotSon .right .activities {
  width: 5.56rem;
  height: 1.25rem;
  background: rgba(216, 93, 39, 0.12);
  border-radius: 0.13rem;
  border: 0.03rem solid #D85D27;
  font-size: 0.75rem;
  color: #D85D27;
  text-align: center;
  line-height: 1.25rem;
}
.bigShotSon .right .distanceTwo{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 0.75rem;
  color: #9b9b9b;
}
