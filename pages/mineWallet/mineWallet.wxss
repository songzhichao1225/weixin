page {
  height: 100%;
  overflow: hidden;
}

.mineWallet .img {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 146rpx auto 24rpx;
}

.mineWallet .text {
  display: block;
  text-align: center;
  font-size: 17px;
  color: #333;
}

.mineWallet .money {
  font-size: 72rpx;
  color: #333;
  text-align: center;
  display: block;
}

.withdrawal {
  width: 664rpx;
  height: 80rpx;
  background: #d85d27;
  border-radius: 40rpx;
  margin: 106rpx auto 0;
  font-size: 36rpx;
  color: #fff;
}
.right{
  position: absolute;
  right: 0.5rem;
  top: 0.5rem;
  font-size: 0.88rem;
  padding: 0.5rem;
}
.forbade{
  width: 100%;
  height: 100%; 
  background:rgba(000, 000, 000, 0.7);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1001;
}
.forbade .contentbade{
  width: 85%;
  min-height: 2rem;
  border-radius: 0.79rem;
  background: #fff;
  position: absolute;
  top: 10%;
  left: 7.5%;
  padding: 1.56rem 0;
}
.forbade .contentbade>text:first-child{
  display: block;
  text-align: center;
  font-size: 1rem;
}
.forbade .contentbade .twoCode{
  width: 13.38rem;
  height: 13.88rem;
  display: block;
  margin: 0 auto;
}
.forbade .contentbade>text:nth-child(3){
  font-size: 1rem;
  display: block;
  text-align: center;
  color: #D85D27;
}
.closeTwo{
  display: block;
  width: 1.5rem;
  height: 1.5rem;
  position: absolute;
  top: 0;
  right: 0;
}
