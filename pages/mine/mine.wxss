page {
  height: 100%;
}

text {
  display: block;
}

.mine {
  overflow: hidden;
  position: relative;
  height: 100%;
}

.mine .banner {
  width: 750rpx;
}

.mine .headerTop {
  width: 702rpx;
  height: 348rpx;
  background-color: #fff;
  position: absolute;
  left: 24rpx;
  z-index: 10;
  top: 170rpx;
  border-radius: 15rpx 15rpx;
  box-shadow: 0 0 6rpx 0 #ccc;
}

.mine .headerTop .header {
  width: 90%;
  height: 138rpx;
  margin: 40rpx auto 0;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.mine .headerTop .header .avatar {
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  float: left;
}

.mine .headerTop .header .name {
  float: left;
}

.mine .headerTop .header .name .nickName {
  font-size: 17px;
  color: #333;
  display: block;
  line-height: 80rpx;
  margin-left: 40rpx;
  float: left;
}

.mine .headerTop .header .name image {
  display: block;
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-left: 40rpx;
}

.mine .headerTop .header .name .navl {
  padding: 3rpx 8rpx;
  background: linear-gradient(270deg, rgba(252, 164, 0, 1) 0%, rgba(254, 224, 115, 1) 100%);
  border-radius: 2px;
  font-size: 10px;
  color: #fff;
  float: left;
  margin-top: 4rpx;
  margin-left: 10rpx;
}

.mine .headerTop .header .arrow {
  width: 22rpx;
  height: 34rpx;
  display: block;
  float: right;
  margin-top: 52rpx;
}

.mine .gold {
  margin-top: 40rpx;
  overflow: hidden;
}

.mine .gold view {
  width: 49.5%;
  float: left;
  font-size: 14px;
  color: #333;
  text-align: center;
  position: relative;
}

.mine .gold view .rankingList {
  width: 42rpx;
  height: 42rpx;
  display: block;
  position: absolute;
  left: 50%;
  margin-left: -21rpx;
  top: 0rpx;
}

.mine .gold view .txt {
  margin-top: 40rpx;
}

.mine .serve {
  display: block;
  margin-left: 24rpx;
  margin-top: 100rpx;
}

.application {
  width: 100%;
  font-size: 16px;
  color: #333;
}

.application .son {
  width: 25%;
  margin-top: 40rpx;
  float: left;
}

.application .son image {
  width: 50rpx;
  height: 48rpx;
  display: block;
  margin: 0 auto;
}

.application .son text {
  font-size: 0.75rem;
  color: #333;
  text-align: center;
  margin-top: 16rpx;
}

.releaseDynamics {
  width: 4.18rem;
  height: 1.25rem;
  font-size: 0.75rem;
  background-color: #f3f3f3;
  border-radius: 0.75rem;
  float: left;
  margin-top: 0.7rem;
}

.forbade {
  width: 100%;
  height: 100%;
  background: rgba(000, 000, 000, 0.7);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1001;
}

.forbade .contentbade {
  width: 85%;
  min-height: 2rem;
  border-radius: 0.79rem;
  background: #fff;
  position: absolute;
  top: 20%;
  left: 7.5%;
  padding: 1.56rem 0;
}

.forbade .contentbade>text:first-child {
  display: block;
  text-align: center;
  font-size: 1rem;
}

.forbade .contentbade .twoCode {
  width: 13.38rem;
  height: 13.88rem;
  display: block;
  margin: 0 auto;
}

.forbade .contentbade>text:nth-child(3) {
  font-size: 1rem;
  display: block;
  text-align: center;
  color: #D85D27;
}

.closeTwo {
  display: block;
  width: 1.5rem;
  height: 1.5rem;
  position: absolute;
  top: 0;
  right: 0;
}

.topRight {
  width: 2rem;
  height: 2rem;
  display: block;
  position: absolute;
  right: 0.5rem;
  top: 0rem;
}



.Invitation { 
  font-size: 0.75rem;
  clear: left;
  margin-left: 40rpx;
}

.textCopy {
  float: right;
  margin-left: 0.5rem;
  border-bottom: 0.06rem solid #000;
}

.information {
  height: 100%;
  background: rgba(000, 000, 000, 0.6);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}

.informationSon {
  width: 80%;
  height: 20rem;
  background: #fff;
  position: absolute;
  left: 10%;
  top: 50%;
  margin-top: -10rem;
}

.informationSon text {
  display: block;
  text-align: center;
  padding-top: 1.5rem;
  font-size: 0.88rem;
}

.informationSon image {
  width: 13rem;
  height: 13rem;
  margin: 1rem auto;
  display: block;
}

.informationSon view {
  width: 5.75rem;
  height: 1.63rem;
  background: #D85D27;
  border-radius: 0.81rem;
  font-size: 0.75rem;
  line-height: 1.63rem;
  text-align: center;
  color: #fff;
  margin: 0 auto;
}

/*公众号样式*/
.official-account {
  background-color: #fff;
	position: fixed;
  z-index: 3;
  display: -webkit-inline-flex;
  width: 100%;
  bottom: 3rem;
  height: 5rem;
}

.closeImg{
  width: 50rpx;
  height: 50rpx;
  position: fixed;
  right: 15rpx;
  top: 5rpx;
  z-index: 4;
}
.officialTxt{
  font-size: 0.88rem;
  color: #fff;
  display: block;
  position: fixed;
  bottom: 8rem;
  height: 1.5rem;
  line-height: 1.5rem;
  width: 100%;
  padding-left: 1rem;
  background: linear-gradient(136deg, #F12A48 0%, #FF8B96 100%);
}