page {
  height: 100%;
}

text {
  display: block;
}

.mine {
  overflow: hidden;
  position: relative;
  height: 100%;
}

.mine .banner {
  width: 750rpx;
}

.mine  .headerTop {
  width: 702rpx;
  height: 348rpx;
  background-color: #fff;
  position: absolute;
  left: 24rpx;
  z-index: 10;
  top: 170rpx;
  border-radius: 15rpx 15rpx;
  box-shadow: 0 0 6rpx 0 #ccc;
}

.mine .headerTop .header {
  width: 90%;
  height: 138rpx;
  margin: 40rpx auto 0;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.mine .headerTop .header .avatar {
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  float: left;
}

.mine .headerTop .header .name {
  float: left;
}

.mine .headerTop .header .name .nickName {
  font-size: 17px;
  color: #333;
  display: block;
  line-height: 80rpx;
  margin-left: 40rpx;
  float: left;
}

.mine .headerTop .header .name image {
  display: block;
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-left: 40rpx;
}

.mine .headerTop .header .name .navl {
  padding: 3rpx 8rpx;
  background: linear-gradient(270deg, rgba(252, 164, 0, 1) 0%, rgba(254, 224, 115, 1) 100%);
  border-radius: 2px;
  font-size: 10px;
  color: #fff;
  float: left;
  margin-top: 4rpx;
  margin-left: 10rpx;
}

.mine .headerTop .header .arrow {
  width: 22rpx;
  height: 34rpx;
  display: block;
  float: right;
  margin-top: 52rpx;
}

.mine .gold {
  margin-top: 40rpx;
  overflow: hidden;
}

.mine .gold view {
  width: 49.5%;
  float: left;
  font-size: 14px;
  color: #333;
  text-align: center;
  position: relative;
}

.mine .gold view .rankingList {
  width: 42rpx;
  height: 42rpx;
  display: block;
  position: absolute;
  left: 50%;
  margin-left: -21rpx;
  top: 0rpx;
}

.mine .gold view .txt {
  margin-top: 40rpx;
}

.mine .serve {
  display: block;
  margin-left: 24rpx;
  margin-top: 100rpx;
}

.application {
  width: 100%;
  font-size: 16px;
  color: #333;
}

.application .son {
  width: 25%;
  margin-top: 40rpx;
  float: left;
}

.application .son image {
  width: 54rpx;
  height: 54rpx;
  display: block;
  margin: 0 auto;
}

.application .son text {
  font-size: 13px;
  color: #333;
  text-align: center;
  margin-top: 16rpx;
}
.releaseDynamics{
  width: 4.18rem;
  height: 1.25rem;
  font-size: 0.75rem;
  background-color: #f3f3f3;
  border-radius: 0.75rem;
  float: left;
  margin-top: 0.7rem;
}

.forbade{
  width: 100%;
  height: 100%; 
  background:rgba(000, 000, 000, 0.7);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1001;
}
.forbade .contentbade{
  width: 85%;
  min-height: 2rem;
  border-radius: 0.79rem;
  background: #fff;
  position: absolute;
  top: 20%;
  left: 7.5%;
  padding: 1.56rem 0;
}
.forbade .contentbade>text:first-child{
  display: block;
  text-align: center;
  font-size: 1rem;
}
.forbade .contentbade .twoCode{
  width: 13.38rem;
  height: 13.88rem;
  display: block;
  margin: 0 auto;
}
.forbade .contentbade>text:nth-child(3){
  font-size: 1rem;
  display: block;
  text-align: center;
  color: #D85D27;
}
.closeTwo{
  display: block;
  width: 1.5rem;
  height: 1.5rem;
  position: absolute;
  top: 0;
  right: 0;
}
